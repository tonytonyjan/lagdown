<%= simple_form_for(@admin_post, bootstrap_form_options(form_class: 'form-horizontal')) do |f| %>
  <%= f.error_notification class: 'alert alert-danger' %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.association :blog, as: :string, input_html: {class: 'select2-single', data: {model: :Blog, column: :subdomain, text: @admin_post.blog.try(:subdomain).to_s}} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
